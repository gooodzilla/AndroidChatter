<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView android:id="@+id/icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingLeft="0dp"
        android:src="@drawable/ic_account_circle_white_48dp"/>

    <LinearLayout
        android:id="@+id/llRemoveCheckMark"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:layout_width="78dp"
        android:layout_height="78dp">

        <ImageView
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/red"
            android:src="@drawable/img_checkmark_white"
            android:padding="0dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="3dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        >

        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/symbol_black"
            android:text=""
            android:maxLines="1" />

        <TextView
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/company_name_gray"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLength="30" />

        <TextView
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:textColor="@color/symbol_black"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="" />

        <TextView
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:id="@+id/newmes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/date"
            android:textSize="15dp"
            android:gravity="center"
            android:text="1"
            android:autoText="true"
            android:background="@drawable/ic_online"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:visibility="invisible" />






        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/status"
            android:background="@color/main_color_gray_dk"
            android:layout_width="match_parent"
            android:layout_height="6dp"></View>


    </RelativeLayout>



</LinearLayout>
